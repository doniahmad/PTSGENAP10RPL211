<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logininstagram"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/arrow_down"
        android:drawablePadding="5dp"
        android:drawableTint="@color/text_color"
        android:text="@string/textLanguage"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/fontspring_regular"
        android:text="@string/textLogo"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border"
        android:inputType="text"
        android:hint="Phone number, email or username"
        android:padding="13dp"
        android:textColorHint="@color/text_color" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="13dp"
        android:singleLine="true"
        android:textColorHint="@color/text_color" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/blue_color"
        android:padding="13dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/forgot_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/text_forgot"
        android:textAlignment="center"
        android:textColor="@color/text_color" />

    <RelativeLayout
        android:id="@+id/or_line"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="OR"
            android:textAlignment="center"
            android:textColor="@color/text_color" />

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border" />

    </RelativeLayout>

    <Button
        android:id="@+id/logingoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/icon_google"
        android:gravity="center"
        android:text="Log in with Google"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/border" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/sign_up"
        android:textColor="@color/text_color" />

</LinearLayout>